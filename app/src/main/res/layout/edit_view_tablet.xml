<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.invisibleteam.goinvisible.mvvm.images.TabletEditViewModel"/>
        <import type="android.view.View"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_image_size">

            <ImageView
                android:id="@+id/header_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:imageUrl="@{viewModel.imageUrl}"
                app:layout_collapseMode="parallax"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:layout_gravity="end"
                android:gravity="end">

                <ImageView
                    android:id="@+id/approve_changes_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/toolbar_icons_margin"
                    android:onClick="@{(view) -> viewModel.onApproveChanges()}"
                    android:src="@drawable/ic_approve"
                    android:visibility="@{viewModel.isInEditMode ? View.VISIBLE : View.GONE}"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/toolbar_icons_margin"
                    android:onClick="@{(view) -> viewModel.onShare()}"
                    android:src="@drawable/ic_share"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/toolbar_icons_margin"
                    android:onClick="@{(view) -> viewModel.onClearAllTags()}"
                    android:src="@drawable/ic_multi_broom"/>

            </LinearLayout>

        </FrameLayout>

        <com.invisibleteam.goinvisible.mvvm.edition.adapter.EditCompoundRecyclerView
            android:id="@+id/edit_compound_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    </LinearLayout>

</layout>